{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      },
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/components/*": ["src/components/*"],
      "@/utils/*": ["src/utils/*"],
      "@/layouts/*": ["src/layouts/*"],
      "@/images/*": ["src/images/*"],
    }
  },
  "include": ["./src/**/*.d.ts", "./src/**/*.ts", "./src/**/*.astro", ".eslintrc.cjs"]
}
